<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:background="#E5B29C"
    app:layout_constraintCircleRadius="30dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="379dp"
        android:layout_height="266dp"
        android:layout_marginBottom="1208dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/masyarakat" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="668dp"
        android:layout_height="938dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="60dp"
        app:cardBackgroundColor="#C98A6E"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4">

        <androidx.cardview.widget.CardView
            android:layout_width="552dp"
            android:layout_height="108dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="20dp"
            app:cardBackgroundColor="#A45036"
            app:cardCornerRadius="30dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="194dp"
                android:layout_height="108dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:hint="NIK"
                android:textSize="40dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="552dp"
            android:layout_height="108dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="150dp"
            app:cardBackgroundColor="#A45036"
            app:cardCornerRadius="30dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:hint="NAMA"
                android:textSize="40dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="552dp"
            android:layout_height="108dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="300dp"
            app:cardBackgroundColor="#A45036"
            app:cardCornerRadius="30dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:hint="USERNAME"
                android:textSize="40dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="552dp"
            android:layout_height="108dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="450dp"
            app:cardBackgroundColor="#A45036"
            app:cardCornerRadius="30dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:hint="PASSWORD"
                android:textSize="40dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="552dp"
            android:layout_height="108dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="600dp"
            app:cardBackgroundColor="#A45036"
            app:cardCornerRadius="30dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="25dp"
                android:hint="NO. TELEPON"
                android:textSize="40dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="552dp"
            android:layout_height="108dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="785dp"
            app:cardBackgroundColor="#6B1F07"
            app:cardCornerRadius="30dp">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="25dp"
                android:text="REGISTER"
                android:textSize="40dp" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="PELAYANAN MASYARAKAT"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>